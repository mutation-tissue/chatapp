<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
        <div class="logo">ロゴ</div>
        <nav>
            <% if(user) {%>
              <a href = "/session/logout">ログアウト</a>
            <% } else { %>
              <a href = "/session/login">ログイン</a>
              <a href = "/session/create-account">アカウントを作成</a>
            <% }; %>
        </nav>
    </header>
    <% if (user) { %>
        <p>Welcome, <%= user.username %>!</p>
        <a href = "/room/create">部屋を作成する</a>

        <ul id="userList">
          <% rooms.forEach(function(room) { %>
            <li class="user-item" data-id="<%= user.id %>">
              <a href="/room/<%= room.room_id%>">
                roomname: <%= room.room_name %>, created_at: <%= room.created_at %>
              </a>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <h1>チャットアプリにようこそ</h1>
        
      <% } %>
    </ul>

</body>
</html>